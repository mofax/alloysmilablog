---
import '../styles/app.scss';

const { frontmatter } = Astro.props;
const tags = frontmatter.tags || [];
const categories = frontmatter.categories || [];
const keywords = [...tags, ...categories].join(', ');
---

<html>
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>Alloys Mila - {`${frontmatter.title}: ${frontmatter.subtitle}`}</title>
        <meta
            name="description"
            content={frontmatter.title}
        />
        <meta
            name="keywords"
            content={keywords}
        />
        <meta name="author" content="Alloys Mila" />
    </head>
    <body>
        <div class="article-header">
            <div class="h">
                <h1>{frontmatter.title}</h1>
                <span class="mod">{frontmatter.subtitle || ""}</span>
            </div>
        </div>
        <article id="article-area" class="blog-article">
            <slot />
        </article>
    </body>
</html>

<style lang="scss">
    .article-header {
        width: 100%;
        max-width: 960px;
        margin-top: 48px;
    }

    .h {
        display: flex;
        flex-direction: column;
        gap: 8px;
        padding-left: 12px;

        h1 {
            font-size: 4rem;
            color: #949494;
        }

        .mod {
            font-size: 1.4rem;
            text-transform: uppercase;
        }
    }
</style>
